{
  "name": "cause-fresh",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "assert": "^1.4.1",
    "axios": "^0.17.1",
    "classnames": "^2.2.5",
    "cross-env": "^5.1.4",
    "dotenv": "^5.0.0",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "flexboxgrid-sass": "^8.0.5",
    "font-awesome": "^4.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.8",
    "react-scripts": "1.0.17",
    "redux": "^3.7.2",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "prettify-js": "./node_modules/.bin/prettier --single-quote --write 'src/**/*.{js,jsx}'",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "load-env-dev": "react-app-env --env-file=./env-config/.env.dev start",
    "load-env-prod": "react-app-env --env-file=./env-config/.env.prod start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "delete-public-folder": "rimraf ../server/public",
    "copy-public": "cp -R ./build/ ../server/public",
    "build": "npm-run-all prettify-js build-css build-js delete-public-folder copy-public",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "react-app-env": "^1.2.0"
  }
}
